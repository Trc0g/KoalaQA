#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 运行代码检查（前端项目）..."
echo ""

# 切换到前端项目目录
cd "ui/front" || exit 1

# 运行 ESLint
echo "⚡ ESLint 检查..."
pnpm run lint --quiet

if [ $? -ne 0 ]; then
  echo ""
  echo "❌ ESLint 检查失败！"
  echo "请修复以上错误后再进行 commit"
  echo ""
  exit 1
fi

echo "✅ 代码检查通过！"
echo ""
